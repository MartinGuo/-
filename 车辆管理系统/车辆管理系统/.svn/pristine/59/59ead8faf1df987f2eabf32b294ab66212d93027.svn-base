        function save() {
            var v1 = $("#form1").serializeArray(); //将表单控件转换为json对象
            var json = JSON2.stringify(v1); //将json对象转换为json字符串
            alert(json);
            $.post("handle/add.ashx?" + $.param({ "table": "CarInfo", "data": json }), function (arg) {
                if (arg > 0) {
                    //练习2：修改下面的提示，保存成功后，链接到列表显示页面(linklist.html)
                    alert("恭喜你，保存成功");
                    location = "";
                }
            })

        }
